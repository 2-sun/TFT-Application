<Window x:Class="TFT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFT"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" ResizeMode="NoResize">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save" Executed="CommandExecuted" CanExecute="CommandCanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <TextBox x:Name="txtBox_id" HorizontalAlignment="Left" FontSize="21" Margin="340,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="txtBox_pw" HorizontalAlignment="Left" FontSize="21" Margin="340,210,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="ID" FontSize="20" HorizontalAlignment="Left" Margin="288,108,0,0" VerticalAlignment="Top"/>
        <Label Content="PW" FontSize="20" HorizontalAlignment="Left" Margin="282,207,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_login" Content="Login" Command="ApplicationCommands.Save" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="ClickLoginButton"/>
    </Grid>
</Window>
